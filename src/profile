if [[ -e ~/.bash_profile.d ]]; then
  for a in `ls ~/.bash_profile.d/*.sh`; do 
    source $a
  done
fi

# homebrew completion files for installed libraries
# the ack autocompletion isn't working on 10.6, so just loading the one we want below
# if [[ -e /usr/local/etc/bash_completion.d/ ]]; then
#   for a in `/usr/local/etc/bash_completion.d/*`; do 
#     source $a
#   done
# fi
if [[ -e /usr/local/etc/bash_completion.d/git-completion.bash ]]; then
  source /usr/local/etc/bash_completion.d/git-completion.bash
fi

[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.

