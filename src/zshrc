# enable zsh autocompletion
autoload -U promptinit
promptinit

# Customize to your needs...
export PATH=/Users/pbyrne/Dropbox/bin:/usr/local/mysql/bin:/usr/local/bin:/usr/local/sbin:/usr/local/share/python:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin

if [[ -e ~/.zsh ]]; then
  for a in `ls ~/.zsh/*.zsh`; do
    # echo sourcing $a
    source $a
  done
fi

# conditionally load rvm
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.

[ -f ~/.zshrc.local ] && source ~/.zshrc.local
