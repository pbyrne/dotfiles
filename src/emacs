(add-to-list 'load-path "~/.emacs.d/lisp/")

					; add evil's packages to package manager
(require 'package)
(push '("marmalade" . "http://marmalade-repo.org/packages/") package-archives)
(push '("melpa" . "http://melpa.milkbox.net/packages/") package-archives)
(package-initialize)

					; enable evil mode
(require 'evil)
(evil-mode 1)


